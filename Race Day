let raceNumber = Math.floor(Math.random() * 1000);

let early = false;

let runnersAge = 18;

if (runnersAge > 18 && early) {
  raceNumber += 1000;
}

if (runnersAge > 18 && early) {
  console.log('You will race at 9:30 am and your race number will be ${raceNumber}.');
}
else if (runnersAge > 18 && !early) {
  console.log('You will race at 11:00 am and your race number will be ${raceNumber}.');
}
else if (runnersAge < 18) {
  console.log(`Youth registrants run at 12:30 pm (regardless of registration) and your race number will be ${raceNumber}.`);
}
else {
  console.log(`Check registration desk.`);
}
